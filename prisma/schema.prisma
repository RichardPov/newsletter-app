// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id // Clerk User ID mapping
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  onboardingCompleted Boolean @default(false)


  feeds       Feed[]
  articles    Article[]
  posts       Post[]
  newsletters Newsletter[]
  toneProfile ToneProfile?
}

model ToneProfile {
  id     String @id @default(cuid())
  userId String @unique
  name   String // e.g., "Professional", "Casual"
  style  String // Description of style
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Feed {
  id            String    @id @default(cuid())
  userId        String
  url           String
  name          String
  lastFetchedAt DateTime?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  articles Article[]
  category String?  // Category identifier

  @@index([userId])
}

model Article {
  id          String   @id @default(cuid())
  userId      String   // Links to user who "owns" this cached copy/view
  feedId      String?
  title       String
  url         String   @db.Text
  content     String?  @db.Text
  summary     String?  @db.Text
  publishedAt DateTime
  viralScore  Int      @default(0)
  status      String   @default("REVIEW") // REVIEW, SAVED, DISMISSED
  isLiked     Boolean  @default(false) // Like functionality
  createdAt   DateTime @default(now())
  
  feed        Feed?    @relation(fields: [feedId], references: [id], onDelete: SetNull)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts       Post[]   // Posts derived from this article
  newsletters Newsletter[]
  articleLinks ArticleNewsletter[]


  @@unique([userId, url]) // Prevent duplicate articles from the same URL for the same user
  @@index([userId, status])
}

// Social Media Posts
model Post {
  id           String    @id @default(cuid())
  userId       String
  articleId    String?   // Optional: sourced from an article
  platform     String    // LINKEDIN, TWITTER, NEWSLETTER
  content      String    @db.Text
  scheduledFor DateTime?
  status       String    // DRAFT, SCHEDULED, PUBLISHED
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  article Article? @relation(fields: [articleId], references: [id])

  @@index([userId, scheduledFor])
}

model Newsletter {
  id        String   @id @default(cuid())
  userId    String
  title     String // Subject Line
  intro     String?  @db.Text
  outro     String?  @db.Text
  
  // Customization fields
  logoUrl     String?
  headerColor String   @default("#10b981")
  textColor   String   @default("#1f2937")
  footerText  String?  @db.Text
  
  status    String   @default("DRAFT") // DRAFT, SENT, ARCHIVED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  articles Article[]
  articleLinks ArticleNewsletter[]
}

// Junction table for newsletter article ordering
model ArticleNewsletter {
  id           String @id @default(cuid())
  newsletterId String
  articleId    String
  order        Int    @default(0)

  newsletter Newsletter @relation(fields: [newsletterId], references: [id], onDelete: Cascade)
  article    Article    @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([newsletterId, articleId])
}
